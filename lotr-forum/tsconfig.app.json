{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "lib": ["ES2022", "DOM"],
    "paths": {
      "@/*": ["./src/*"],
      "@composables/*": ["./src/composables/*"],
      "@components/*": ["./src/components/*"],
      "@stores/*": ["./src/stores/*"],
      "@views/*": ["./src/views/*"],
    }
  }
}
